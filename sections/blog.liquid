<div class="page-container-{{ section.id }}">
  <div class="blog-container">
  
    <div>
      <div>
        <h1>{{ blog.title }}</h1>
        <p>Lorem ipsum dolor sit amet.</p>
      </div>
    </div>
  
  
    <div>
      {% paginate blog.articles by 3 %}
        <div>
          {% for article in blog.articles %}
            <div class="card-container">
              <div class="card-blog">
                {% if article.image.src != null %}
                  <img src="{{ article.image.src | img_url: 'large' }}" alt="{{ article.img.alt }}">
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'card-img-top' }}
                {% endif %}
                <div>
                  <h2>
                    <a href="{{ article.url }}">{{ article.title }}</a>
                  </h2>
                  {{ article.author }} @ {{ article.created_at }}
                  <p>
                    {% if article.excerpt.size > 0 %}
                      {{ article.excerpt }}
                    {% else %}
                      <p>{{ article.content | strip_html | truncatewords: 20 }}</p>
                    {% endif %}
                  </p>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
  
        {% comment %} custom pagination {% endcomment %}
        <div class="paginate">
          {% render 'paginate', paginate: paginate %}
        </div>
      {% endpaginate %}
    </div>
  
  </div>
</div>

{% style %}
  .page-container-{{ section.id }} {
    width: 100%
  }

  .blog-container {
    width: 60vw;
    margin: 0 auto;
  }

  .card-container {
    display: grid;
    grid-template-column: repeat(3, 1fr);
  }

  .card-blog {

  }
{% endstyle %}

