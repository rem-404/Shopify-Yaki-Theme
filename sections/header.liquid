      "id": "navlist_font_weight",
      "label": "Menu Font Weight",
      "options": [
        {
          "value": "100",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Regular"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "text",
      "id": "search_placeholder",
      "default": "Search",
      "label": "Search Bar Placeholder"
    },
    {
      "type": "color",
      "id": "search_bar_font_color",
      "label": "Search Bar Font Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "search_bar_border_color",
      "label": "Search Bar Border Color",
      "default": "#ccc"
