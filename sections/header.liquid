      "type": "range",
      "id": "search_bar_size",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Search Bar Size",
      "default": 6
    },
    {
      "type": "range",
      "id": "search_bar_border_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Search Bar Border-Radius",
      "default": 0
    }
  ]
}
{% endschema %}
